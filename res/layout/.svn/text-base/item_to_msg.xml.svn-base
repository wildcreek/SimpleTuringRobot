<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="8dp" >

    <TextView
        android:id="@+id/id_to_msg_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
       	android:background="#bebebe"
       	android:textColor="#f5f5f5"
       	android:textSize="12sp"
       	android:text="2012-12-12 12:12:12"
       	android:layout_marginBottom="8dp"
        /> 
        <RelativeLayout 
           android:layout_width="wrap_content" 
           android:layout_height="wrap_content"
           android:gravity="right"
           >
             <ImageView 
               android:id="@+id/id_iv_pic"
               android:layout_width="55dp"
               android:layout_height="55dp"
               android:src="@drawable/to"
               android:layout_alignParentRight="true"
            />
           <TextView 
	           android:id="@+id/id_to_text"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:text="你好"
	           android:textSize="18sp"
	           android:gravity="center"
	           android:layout_toLeftOf="@id/id_iv_pic"
	           android:background="@drawable/chatto1"
           />
         
        </RelativeLayout>

</LinearLayout>